  "version": "0.0.1",
  "description": "Smart contracts + CLI for fully on-chain battles",
  "main": "index.js",
  "scripts": {
    "test": "npx hardhat test",
    "prepare": "husky install",
    "deploy": "npx hardhat run scripts/deploy.ts",
